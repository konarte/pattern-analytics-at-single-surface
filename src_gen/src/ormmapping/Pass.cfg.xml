<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/pass_db</property>
		<property name="connection.username">pass</property>
		<property name="connection.password">adesroot</property>
		<property name="hibernate.c3p0.acquire_increment">1</property>
		<property name="hibernate.c3p0.idle_test_period">0</property>
		<property name="hibernate.c3p0.min_size">1</property>
		<property name="hibernate.c3p0.max_size">15</property>
		<property name="hibernate.c3p0.timeout">0</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/edu/mgupi/pass/db/surfaces/SurfaceClasses.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/surfaces/Surfaces.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/surfaces/SurfaceTypes.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/surfaces/Materials.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/defects/DefectClasses.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/defects/DefectTypes.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/defects/Defects.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/locuses/LModules.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/locuses/LFilters.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/locuses/Locuses.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/locuses/LocusSources.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/locuses/LocusFilters.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/locuses/LocusModuleParams.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/sensors/Sensors.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/sensors/SensorClasses.hbm.xml" />
		<mapping resource="ormmapping/edu/mgupi/pass/db/sensors/SensorTypes.hbm.xml" />
	</session-factory>
</hibernate-configuration>
